/**app.wxss**/
@import 'miniprogram_npm/tdesign-miniprogram/common/style/index.wxss';

/* 全局 CSS 变量 - 默认主题 */
page {
  /* 颜色 */
  --color-primary: #07c160;
  --color-secondary: #10aeff;
  --color-text: #333333;
  --color-text-secondary: #999999;
  --color-background: #f5f5f5;
  --color-white: #ffffff;
  --color-border: #e5e5e5;
  --color-error: #fa5151;
  --color-warning: #ffc300;
  --color-success: #07c160;

  /* 字号 */
  --font-size-xs: 24rpx;
  --font-size-sm: 28rpx;
  --font-size-md: 32rpx;
  --font-size-lg: 36rpx;
  --font-size-xl: 40rpx;
  --font-size-xxl: 48rpx;

  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;

  /* 圆角 */
  --border-radius-sm: 8rpx;
  --border-radius-md: 16rpx;
  --border-radius-lg: 24rpx;
  --border-radius-round: 999rpx;

  /* 图标尺寸 - 统一管理，适配不同机型 */
  --icon-size-xs: 32rpx;
  --icon-size-sm: 40rpx;
  --icon-size-md: 48rpx;
  --icon-size-lg: 56rpx;
  --icon-size-xl: 64rpx;

  /* 基础样式 */
  background-color: var(--color-background);
  color: var(--color-text);
  font-size: var(--font-size-md);
  
  /* TDesign 主题变量覆盖 */
  --td-brand-color: #667eea;
  --td-brand-color-hover: #764ba2;
  --td-tab-bar-bg: rgba(255, 255, 255, 0.9);
  --td-tab-bar-color: #666666;
  --td-tab-bar-active-color: #ffffff;
  --td-tab-bar-active-bg: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 适老化主题覆盖 */
page.theme-elder {
  --font-size-xs: 28rpx;
  --font-size-sm: 32rpx;
  --font-size-md: 40rpx;
  --font-size-lg: 44rpx;
  --font-size-xl: 48rpx;
  --font-size-xxl: 56rpx;
  --color-text: #000000;
}

/* 通用容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: var(--color-primary);
  color: var(--color-white);
  border-radius: var(--border-radius-md);
}

.btn-secondary {
  background-color: var(--color-white);
  color: var(--color-primary);
  border: 2rpx solid var(--color-primary);
  border-radius: var(--border-radius-md);
}

/* TDesign Popup 全局层级控制 - 确保在 TabBar 之上 */
t-popup,
.t-popup,
.t-popup__content {
  z-index: 99999 !important;
}

.t-popup__overlay {
  z-index: 99998 !important;
}
 