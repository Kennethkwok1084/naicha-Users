/* components/product-card/product-card.wxss */
.product-card {
  display: flex;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.product-card:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.product-card--sold-out {
  opacity: 0.6;
}

.product-card__image-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.product-card__image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: var(--bg-secondary, #f5f5f5);
}

.product-card__sold-out-badge {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
}

.product-card__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.product-card__name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary, #333);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.product-card__desc {
  font-size: 24rpx;
  color: var(--text-secondary, #999);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 12rpx;
}

.product-card__footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-card__price {
  display: flex;
  align-items: baseline;
  color: var(--color-primary, #ff6b35);
}

.product-card__price-symbol {
  font-size: 24rpx;
  font-weight: 500;
  margin-right: 4rpx;
}

.product-card__price-value {
  font-size: 36rpx;
  font-weight: 600;
}

.product-card__add-btn {
  width: 56rpx;
  height: 56rpx;
  background: var(--color-primary, #ff6b35);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.product-card__add-icon {
  color: #fff;
  font-size: 40rpx;
  line-height: 1;
  font-weight: 300;
}

/* 适老化主题 */
page.theme-elder .product-card__name {
  font-size: 36rpx;
}

page.theme-elder .product-card__price-value {
  font-size: 40rpx;
}
