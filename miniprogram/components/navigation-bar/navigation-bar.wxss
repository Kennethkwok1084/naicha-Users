.weui-navigation-bar {
  overflow: visible;
  color: rgba(0,0,0,.9);
  flex: none;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  transition: all 0.3s ease;
}

.weui-navigation-bar.with-shadow {
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.weui-navigation-bar .android {
  --height: 96rpx;  /* 从 48px 改为 96rpx (48 * 2) */
}

.weui-navigation-bar__inner {
  position: relative;
  top: 0;
  left: 0;
  height: calc(88rpx + env(safe-area-inset-top));
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: env(safe-area-inset-top);
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 背景模糊效果 */
.nav-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  background: rgba(255, 255, 255, 0.7);
  z-index: -1;
}

.weui-navigation-bar__left {
  position: relative;
  padding-left: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
}

.weui-navigation-bar__buttons {
  display: flex;
  align-items: center;
}

.weui-navigation-bar__btn_goback_wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  padding: 0;
  margin: 0;
  border-radius: 50%;
  transition: background-color 0.2s;
}

.weui-navigation-bar__btn_goback_wrapper.weui-active {
  background-color: rgba(0, 0, 0, 0.05);
}

.weui-navigation-bar__button {
  display: flex;
  align-items: center;
  justify-content: center;
}

.weui-navigation-bar__btn_goback {
  width: 20rpx;
  height: 20rpx;
  border-left: 3rpx solid currentColor;
  border-bottom: 3rpx solid currentColor;
  transform: rotate(45deg);
  margin-right: -4rpx;
}

.weui-navigation-bar__center {
  font-size: 34rpx;  /* 从 17px 改为 34rpx */
  text-align: center;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  flex: 1;
  height: 100%;
}

.weui-navigation-bar__loading {
  margin-right: 8rpx;  /* 从 4px 改为 8rpx */
  align-items: center;
}

