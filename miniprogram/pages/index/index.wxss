/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.page-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
  width: 100%;
  height: 100%;
}

.home-container {
  display: flex;
  flex-direction: column;
  padding-top: 160rpx;
}

/* 轮播图区域 */
.banner-section {
  margin: 0 32rpx 24rpx 32rpx;
}

.banner-swiper {
  width: 100%;
  height: 274rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.banner-content {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.banner-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
  text-align: center;
}

/* 功能区 */
.function-section {
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding: 32rpx 32rpx;
  margin: 0 32rpx 24rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.function-icon-circle {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.function-icon-emoji {
  font-size: 48rpx;
  line-height: 1;
}

.function-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 中间轮播广告 */
.ad-section {
  margin: 0 32rpx 24rpx 32rpx;
}

.ad-swiper {
  width: 100%;
  height: 310rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.ad-card {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.ad-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ad-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
}

.ad-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 集杯卡 */
.loyalty-card-section {
  padding: 0 32rpx;
  margin-bottom: 160rpx;
}

.loyalty-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.card-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #ffffff;
}

.card-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.cup-progress {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 4rpx;
}

.cup-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.cup-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.cup-icon {
  font-size: 40rpx;
  line-height: 1;
  transition: all 0.3s ease;
}

.cup-icon.filled {
  opacity: 1;
  filter: grayscale(0%);
}

.cup-icon.empty {
  opacity: 0.3;
  filter: grayscale(100%);
}

.card-status {
  text-align: center;
  margin-bottom: 24rpx;
  opacity: 0.95;
}

.cup-count {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.card-footer {
  display: flex;
  justify-content: center;
  align-items: center;
}

.redeem-btn {
  padding: 18rpx 64rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  background-color: transparent;
  color: #ffffff;
}

.redeem-btn.active {
  background-color: #ffffff;
  color: #667eea;
  border-color: transparent;
}

.redeem-btn.disabled {
  background-color: transparent;
  color: rgba(255, 255, 255, 0.7);
  border-color: rgba(255, 255, 255, 0.5);
}


