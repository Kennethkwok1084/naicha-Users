/* pages/product-detail/product-detail.wxss */
.product-detail {
  min-height: 100vh;
  background: var(--bg-color, #f5f5f5);
  padding-bottom: 320rpx; /* 为底部操作栏和 TabBar 预留空间 */
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.product-detail__content {
  background: var(--bg-color, #f5f5f5);
}

/* 商品图片区域 */
.product-detail__image-wrapper {
  position: relative;
  width: 100%;
  height: 750rpx;
  background: #fff;
}

.product-detail__image {
  width: 100%;
  height: 100%;
}

.product-detail__image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f0f0f0;
}

.product-detail__sold-out-badge {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  padding: 12rpx 24rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

/* 商品信息 */
.product-detail__info {
  background: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.product-detail__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.product-detail__name {
  flex: 1;
  font-size: var(--font-size-lg, 36rpx);
  font-weight: bold;
  color: var(--text-color, #333);
  line-height: 1.4;
}

.product-detail__price {
  font-size: var(--font-size-xl, 40rpx);
  font-weight: bold;
  color: var(--primary-color, #ff6b35);
  margin-left: 24rpx;
}

.product-detail__desc {
  font-size: var(--font-size-md, 28rpx);
  color: var(--text-color-secondary, #666);
  line-height: 1.6;
}

/* 规格选择�?*/
.product-detail__specs {
  background: #fff;
  margin-bottom: 20rpx;
}

.spec-group {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.spec-group:last-child {
  border-bottom: none;
}

.spec-group__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.spec-group__name {
  font-size: var(--font-size-md, 32rpx);
  font-weight: bold;
  color: var(--text-color, #333);
}

.spec-group__required {
  font-size: var(--font-size-sm, 24rpx);
  color: var(--error-color, #ee0a24);
}

.spec-group__options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-option {
  position: relative;
  min-width: 160rpx;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border: 2rpx solid transparent;
  border-radius: var(--border-radius, 8rpx);
  font-size: var(--font-size-md, 28rpx);
  color: var(--text-color, #333);
  text-align: center;
  cursor: pointer;
  transition: all 0.3s;
}

.spec-option--selected {
  background: var(--primary-color-light, #fff3ed);
  border-color: var(--primary-color, #ff6b35);
  color: var(--primary-color, #ff6b35);
}

.spec-option--disabled {
  background: #f9f9f9;
  color: #ccc;
  cursor: not-allowed;
  opacity: 0.6;
}

.spec-option__name {
  display: block;
  margin-bottom: 4rpx;
}

.spec-option__price {
  display: block;
  font-size: var(--font-size-sm, 24rpx);
  color: var(--primary-color, #ff6b35);
}

.spec-option__sold-out {
  display: block;
  font-size: var(--font-size-xs, 20rpx);
  color: #999;
}

/* 数量选择�?*/
.product-detail__quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.product-detail__quantity-label {
  font-size: var(--font-size-md, 32rpx);
  color: var(--text-color, #333);
}

/* 底部操作栏 */
.product-detail__footer {
  position: fixed;
  bottom: 100rpx; /* 在 TabBar 上方悬浮,TabBar 高度约 100rpx */
  left: 32rpx;
  right: 32rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1), 0 0 20rpx rgba(0, 0, 0, 0.05);
  border-radius: 24rpx; /* 添加圆角使其看起来悬浮 */
  z-index: 999; /* 低于 TabBar 的 1001 */
}

.product-detail__total {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 24rpx;
}

.product-detail__total-label {
  font-size: var(--font-size-sm, 24rpx);
  color: var(--text-color-secondary, #666);
  margin-bottom: 4rpx;
}

.product-detail__total-price {
  font-size: var(--font-size-xl, 40rpx);
  font-weight: bold;
  color: var(--primary-color, #ff6b35);
}

.product-detail__footer t-button {
  flex: 0 0 auto;
  min-width: 240rpx;
}

