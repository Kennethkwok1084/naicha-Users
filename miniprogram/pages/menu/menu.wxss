page {
  --primary-color: #2f8d46;
  --text-color: #222222;
  --subtext-color: #666666;
  --border-color: #ededed;
  --bg-color: #fafaFA;
  --surface-color: #ffffff;
  /* 响应式图标尺寸变量 */
  --icon-xs: 32rpx;
  --icon-sm: 40rpx;
  --icon-md: 48rpx;
  --icon-lg: 56rpx;
  --icon-xl: 64rpx;
  height: 100%;
  background: var(--bg-color);
}

.menu-page {
  min-height: 100vh;
  background: var(--bg-color);
}

.menu-page__container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.menu-page__skeleton {
  display: flex;
  padding: 64rpx 32rpx 120rpx;
}

.menu-page__skeleton-left {
  margin-right: 32rpx;
}

.menu-page__skeleton-left {
  width: 176rpx;
  margin-right: 32rpx;
}

.menu-page__skeleton-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-page__skeleton-right > * {
  margin-bottom: 32rpx;
}

.menu-page__skeleton-right > *:last-child {
  margin-bottom: 0;
}

/* 顶部导航栏 */
.header-bar {
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  box-sizing: border-box;
}

.header-bar__content {
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  height: 100%;
}

.header-bar__left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-right: 24rpx;
}

.header-bar__icon-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-bar__search {
  flex: 1;
}

.header-bar__right {
  margin-left: 24rpx;
}

.header-bar__more-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 门店信息区 */
.store-info {
  background: #fff;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.store-info__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.store-info__main {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.store-info__name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.store-info__actions {
  display: flex;
  align-items: center;
}

/* 配送模式切换 */
.delivery-toggle {
  display: flex;
  background: #f7f7f7;
  border-radius: 40rpx;
  border: 1rpx solid #eee;
  padding: 6rpx;
}

.delivery-toggle__btn {
  padding: 8rpx 26rpx;
  font-size: 24rpx;
  color: #333;
  border-radius: 32rpx;
  min-width: 104rpx;
  text-align: center;
  transition: all 0.2s;
}

.delivery-toggle__btn--active {
  background: #fff;
  color: #7D4500;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.store-info__address {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

/* 配送信息展开区 */
.delivery-info {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 12rpx;
}

.delivery-info__item {
  display: flex;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.delivery-info__item:last-child {
  margin-bottom: 0;
}

.delivery-info__label {
  color: #999;
  flex-shrink: 0;
}

.delivery-info__value {
  color: #333;
}

.delivery-info__toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  gap: 8rpx;
}

.delivery-info__toggle-text {
  font-size: 24rpx;
  color: #7D4500;
  font-weight: 500;
}

.menu-page__content {
  flex: 1;
  display: flex;
  overflow: hidden;
  margin-top: 24rpx;
}

/* 左侧分类栏 */
.menu-page__sidebar {
  width: 176rpx;
  background: #f5f5f5;
  overflow: hidden;
}

.menu-page__sidebar t-side-bar {
  height: 100%;
}

/* 分类栏激活项样式优化 */
.menu-page__sidebar .t-side-bar-item--active {
  background: #fff;
  border-left: 6rpx solid #7D4500;
  color: #7D4500 !important;
  font-weight: 500;
}

.menu-page__products {
  flex: 1;
  background: var(--surface-color);
  border-radius: 24rpx 0 0 0;
  margin-left: 16rpx;
  height: calc(100vh - 360rpx);
}

.menu-page__products-list {
  padding: 24rpx 24rpx 260rpx;
  box-sizing: border-box;
}

.menu-page__product-item {
  margin-bottom: 24rpx;
}

.menu-page__product-item:last-child {
  margin-bottom: 0;
}

.menu-page__empty {
  padding-top: 160rpx;
}

/* 购物车浮层 */
.cart-bar {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: calc(140rpx + constant(safe-area-inset-bottom));
  bottom: calc(140rpx + env(safe-area-inset-bottom));
  background: #fff;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1002;
  height: 100rpx;
}

.cart-bar__left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.cart-bar__icon {
  width: 54rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.cart-bar__info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.cart-bar__total {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.3;
}

.cart-bar__hint {
  font-size: 22rpx;
  color: #999;
  margin-top: 2rpx;
}

.cart-bar__empty-hint {
  font-size: 28rpx;
  color: #999;
  margin-left: 24rpx;
}

.cart-bar__btn {
  width: 180rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #7D4500;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.cart-bar__btn text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.cart-bar__btn--disabled {
  background: #ccc;
}

/* Shop detail popup */
.shop-detail-popup {
  background: var(--surface-color);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
}

.shop-detail__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.shop-detail__title {
  font-size: 32rpx;
  font-weight: 600;
}

.shop-detail__close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shop-detail__section {
  margin-bottom: 32rpx;
}

.shop-detail__section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.shop-detail__section-text {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.shop-detail__section-text.empty {
  color: #bbbbbb;
}

.shop-detail__paragraph {
  margin-bottom: 8rpx;
}

.shop-detail__paragraph.highlight {
  color: var(--primary-color);
}

.shop-detail__info-list {
  display: flex;
  flex-direction: column;
}

.shop-detail__info-item {
  margin-bottom: 12rpx;
}

.shop-detail__info-item:last-child {
  margin-bottom: 0;
}

.shop-detail__info-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.shop-detail__info-label {
  width: 140rpx;
  color: var(--subtext-color);
}

.shop-detail__info-value.open {
  color: var(--primary-color);
}

.shop-detail__actions {
  margin-top: 32rpx;
  display: flex;
  margin-left: -16rpx;
  margin-right: -16rpx;
}

.shop-detail__btn {
  margin: 0 8rpx;
}

.shop-detail__btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--border-color);
  font-size: 28rpx;
}

.shop-detail__btn--primary {
  background: var(--primary-color);
  color: #fff;
  border-color: transparent;
}

/* 规格选择弹窗 */
.spec-popup {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  height: 85vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

/* 规格弹窗骨架屏 */
.spec-popup__skeleton {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.spec-popup__skeleton-header {
  position: relative;
  width: 100%;
  height: 260rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #e0e0e0 0%, #c0c0c0 100%);
}

.spec-popup__skeleton-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% {
    background-position: -100% 0;
  }
  100% {
    background-position: 100% 0;
  }
}

.spec-popup__skeleton-info {
  padding: 24rpx;
  background: #fff;
  flex-shrink: 0;
  box-sizing: border-box;
}

.spec-popup__skeleton-content {
  flex: 1;
  padding: 16rpx 24rpx;
  overflow-y: scroll;
  box-sizing: border-box;
}

.spec-popup__skeleton-content .spec-group {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

/* 顶部图片区域 */
.spec-popup__header {
  position: relative;
  width: 100%;
  height: 260rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.spec-popup__image {
  width: 100%;
  height: 100%;
  display: block;
}

.spec-popup__close {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* 商品信息区 */
.spec-popup__info {
  padding: 24rpx;
  background: #fff;
  flex-shrink: 0;
  box-sizing: border-box;
}

.spec-popup__price-row {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.spec-popup__price {
  font-size: 40rpx;
  font-weight: 600;
  color: #e34d59;
}

.spec-popup__stock {
  font-size: 24rpx;
  color: #999;
}

.spec-popup__name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.spec-popup__desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  display: block;
}

/* 规格内容区域 */
.spec-popup__content {
  flex: 1;
  padding: 24rpx 32rpx 32rpx;
  background: #fafafa;
  overflow-y: scroll;
  box-sizing: border-box;
}

/* 规格组 */
.spec-group {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 24rpx 20rpx;
  box-sizing: border-box;
}

.spec-group__title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

/* 规格选项网格布局 */
.spec-options-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin-top: 16rpx;
  gap: 24rpx 28rpx;
  box-sizing: border-box;
}

/* 胶囊按钮样式 */
.spec-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
  height: 80rpx;
  padding: 0 40rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  text-align: center;
  box-sizing: border-box;
  flex-shrink: 0;
  border: 2rpx solid transparent;
  line-height: 1;
}

.spec-tag:active {
  transform: scale(0.96);
}

.spec-tag__name {
  color: inherit;
  font-weight: 500;
}

.spec-tag__price {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #fa4126;
  font-weight: 600;
}

.spec-tag__soldout {
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #c8c9cc;
}

/* 选中状态 */
.spec-tag--selected {
  background: #e7f5ff;
  color: #0052d9;
  border-color: #0052d9;
}

.spec-tag--selected .spec-tag__name {
  color: #0052d9;
  font-weight: 600;
}

.spec-tag--selected .spec-tag__price {
  color: #0052d9;
}

/* 禁用状态 */
.spec-tag--disabled {
  background: #f5f5f5;
  color: #c8c9cc;
  opacity: 0.6;
  pointer-events: none;
}

.spec-tag--disabled .spec-tag__soldout {
  color: #c8c9cc;
}

/* 底部操作栏 */
.spec-popup__footer {
  position: relative;
  border-top: 1rpx solid #ebedf0;
  padding: 24rpx 32rpx;
  /* 增加底部边距以避免被TabBar遮挡（TabBar高度约100rpx + 安全区） */
  padding-bottom: calc(120rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  background: #fff;
  flex-shrink: 0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.04);
  z-index: 10;
}

.spec-popup__total {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.spec-popup__total-label {
  font-size: 28rpx;
  color: #606266;
  font-weight: 500;
}

.spec-popup__total-price {
  font-size: 48rpx;
  font-weight: 700;
  color: #fa4126;
  letter-spacing: -0.5rpx;
}

.spec-popup__actions {
  display: flex;
  gap: 16rpx;
}

.spec-popup__btn {
  flex: 1;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  border-radius: 44rpx !important;
  border: none !important;
}

.spec-popup__btn--secondary {
  background: #f5f7fa !important;
  color: #1a1a1a !important;
}

.spec-popup__btn--primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
  color: #fff !important;
}
