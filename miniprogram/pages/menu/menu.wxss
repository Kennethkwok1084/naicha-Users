/* pages/menu/menu.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-secondary, #f5f5f5);
}

.menu-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.menu-page__loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 600rpx;
}

.menu-page__container {
  display: flex;
  flex: 1;
  overflow: hidden;
}

.menu-page__sidebar {
  width: 180rpx;
  flex-shrink: 0;
  background: #fff;
  border-right: 1px solid var(--border-color, #eee);
}

.menu-page__products {
  flex: 1;
  height: 100%;
  background: var(--bg-secondary, #f5f5f5);
}

.menu-page__products-list {
  padding: 24rpx;
  padding-bottom: 180rpx; /* 为 TabBar 预留空间 */
}

.menu-page__product-item {
  margin-bottom: 24rpx;
}

.menu-page__product-item:last-child {
  margin-bottom: 0;
}

.menu-page__empty {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 600rpx;
}

