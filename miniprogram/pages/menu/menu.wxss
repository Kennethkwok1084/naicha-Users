page {
  height: 100%;
  background: #fafaFA;
}

.menu-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #fafaFA;
}

.menu-page__container {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
  overflow: hidden;
}

.menu-page__skeleton {
  display: flex;
  padding: 64rpx 32rpx 120rpx;
}

.menu-page__skeleton-left {
  margin-right: 32rpx;
}

.menu-page__skeleton-left {
  width: 176rpx;
  margin-right: 32rpx;
}

.menu-page__skeleton-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-page__skeleton-right > * {
  margin-bottom: 32rpx;
}

.menu-page__skeleton-right > *:last-child {
  margin-bottom: 0;
}

.header-bar {
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 900;
  box-sizing: border-box;
}

.header-bar__content {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 100%;
}

.header-bar__left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
}

.header-bar__icon-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
}

.header-bar__search {
  flex: 1;
  max-width: 50%;
  min-width: 0;
  margin-left: 16rpx;
}



.header-bar__more-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 门店信息区 */
.store-info {
  background: #fff;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.store-info__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.store-info__main {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.store-info__name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.store-info__actions {
  display: flex;
  align-items: center;
}

/* 配送模式切换 */
.delivery-toggle {
  display: flex;
  background: #f7f7f7;
  border-radius: 40rpx;
  border: 1rpx solid #eee;
  padding: 6rpx;
}

.delivery-toggle__btn {
  padding: 8rpx 26rpx;
  font-size: 24rpx;
  color: #999;
  border-radius: 32rpx;
  min-width: 104rpx;
  text-align: center;
  transition: all 0.2s;
}

.delivery-toggle__btn--active {
  background: #7D4500;
  color: #fff;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(125, 69, 0, 0.3);
}

.store-info__address {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

/* 配送信息展开区 */
.delivery-info {
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 12rpx;
}

.delivery-info__item {
  display: flex;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.delivery-info__item:last-child {
  margin-bottom: 0;
}

.delivery-info__label {
  color: #999;
  flex-shrink: 0;
}

.delivery-info__value {
  color: #333;
}

.delivery-info__toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  gap: 8rpx;
}

.delivery-info__toggle-text {
  font-size: 24rpx;
  color: #7D4500;
  font-weight: 500;
}

.delivery-info__actions {
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.delivery-info__action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #7D4500;
  font-weight: 500;
}

.menu-page__content {
  flex: 1;
  display: flex;
  overflow: hidden;
  margin-top: 24rpx;
  min-height: 0;
}

/* 左侧分类栏 */
.menu-page__sidebar {
  width: 176rpx;
  background: #f5f5f5;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.menu-page__sidebar t-side-bar {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
}

/* 分类栏激活项样式优化 */
.menu-page__sidebar .t-side-bar-item--active {
  background: #fff;
  border-left: 6rpx solid #7D4500;
  color: #7D4500 !important;
  font-weight: 500;
}

.menu-page__products {
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx 0 0 0;
  margin-left: 16rpx;
  min-height: 0;
  /* scroll-view 作为 flex 子元素需要明确高度约束 */
}

.menu-page__products-list {
  padding: 24rpx 24rpx 200rpx;
  box-sizing: border-box;
}

.menu-page__product-item {
  margin-bottom: 24rpx;
}

.menu-page__product-item:last-child {
  margin-bottom: 0;
}

.menu-page__empty {
  padding-top: 160rpx;
}

/* 购物车浮层 - 悬浮在 TabBar 上方 */
.cart-bar {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  /* bottom 由 JS 动态计算，在 wxml 中设置 */
  background: #fff;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.15);
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1002;
  height: 100rpx;
}

.cart-bar__left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.cart-bar__icon {
  width: 54rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.cart-bar__info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.cart-bar__total {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.3;
}

.cart-bar__hint {
  font-size: 22rpx;
  color: #999;
  margin-top: 2rpx;
}

.cart-bar__empty-hint {
  font-size: 28rpx;
  color: #999;
  margin-left: 24rpx;
}

.cart-bar__btn {
  width: 180rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #7D4500;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.cart-bar__btn text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.cart-bar__btn--disabled {
  background: #ccc;
}

/* Shop detail popup */
.shop-detail-popup {
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
}

.shop-detail__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.shop-detail__title {
  font-size: 32rpx;
  font-weight: 600;
}

.shop-detail__close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shop-detail__section {
  margin-bottom: 32rpx;
}

.shop-detail__section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.shop-detail__section-text {
  font-size: 24rpx;
  color: #666666;
}

.shop-detail__section-text.empty {
  color: #bbbbbb;
}

.shop-detail__paragraph {
  margin-bottom: 8rpx;
}

.shop-detail__paragraph.highlight {
  color: #2f8d46;
}

.shop-detail__info-list {
  display: flex;
  flex-direction: column;
}

.shop-detail__info-item {
  margin-bottom: 12rpx;
}

.shop-detail__info-item:last-child {
  margin-bottom: 0;
}

.shop-detail__info-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.shop-detail__info-label {
  width: 140rpx;
  color: #666666;
}

.shop-detail__info-value.open {
  color: #2f8d46;
}

.shop-detail__actions {
  margin-top: 32rpx;
  display: flex;
  margin-left: -16rpx;
  margin-right: -16rpx;
}

.shop-detail__btn {
  margin: 0 8rpx;
}

.shop-detail__btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #ededed;
  font-size: 28rpx;
}

.shop-detail__btn--primary {
  background: #2f8d46;
  color: #fff;
  border-color: transparent;
}

/* 规格选择弹窗 */
/* ===== Popup Container ===== */
.popup-container {
  width: 100%;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  transition: height 200ms ease;
}

/* 顶部产品宣传图banner */
.popup-banner {
  width: 100%;
  height: 500rpx;
  background: #F5F5F5;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  backdrop-filter: blur(10rpx);
}

/* 底部操作栏 */
.action-bar {
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #F0F0F0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
  z-index: 1000;
}

.action-price {
  display: flex;
  align-items: baseline;
}

.action-price__label {
  font-size: 40rpx;
  color: #7D4500;
  font-weight: 500;
}

.action-price__value {
  font-size: 40rpx;
  color: #7D4500;
  font-weight: 500;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
}

.action-btn {
  height: 96rpx;
  padding: 0 48rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.action-btn:active {
  opacity: 0.8;
}

.cart-btn {
  background: #FFFFFF;
  color: #7D4500;
  border: 2rpx solid #7D4500;
}

.buy-btn {
  background: #7D4500;
  color: #FFFFFF;
  border: 2rpx solid #7D4500;
}

/* 产品信息卡片 */
.popup-info-card {
  padding: 32rpx;
  padding-bottom: 24rpx;
  background: #FFFFFF;
}

.product-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.product-subtitle {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.6;
}

/* 滚动内容区 */
.scroll-content {
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  background: #FFFFFF;
}

/* 规格部分 */
.topping-section {
  background: #F7F7F7;
  border-radius: 20rpx;
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.section-title text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.required-tag {
  padding: 4rpx 12rpx;
  background: #FFF5E6;
  border-radius: 8rpx;
  font-size: 22rpx !important;
  color: #7D4500 !important;
  font-weight: 500 !important;
}

/* 选项容器 */
.option-container {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

/* 规格选项 */
.spec-option {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
  height: 78rpx;
  padding: 0 32rpx;
  background: #F8F8F8;
  border: 2rpx solid #E0E0E0;
  border-radius: 40rpx;
  transition: all 0.2s;
}

.option-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.price-tag {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #7D4500;
  font-weight: 600;
}

/* 选中状态 */
.spec-option.active {
  background: rgba(125, 69, 0, 0.08);
  border-color: #7D4500;
}

.spec-option.active .option-name {
  color: #7D4500;
  font-weight: 600;
}

/* 禁用/售罄状态 */
.spec-option.disabled {
  background: #F8F8F8;
  border-color: #E0E0E0;
  pointer-events: none;
}

.spec-option.disabled .option-name {
  color: #CCCCCC;
}

/* 售罄标签 */
.option-tag {
  position: absolute;
  top: -14rpx;
  right: -8rpx;
  padding: 6rpx 12rpx;
  background: #E54D42;
  border-radius: 20rpx;
}

.option-tag text {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* 数量选择 */
.quantity-container {
  background: #F7F7F7;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 32rpx 40rpx;
}

.quantity-text text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.stepper {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.minus-btn,
.plus-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #F7F7F7;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.minus-btn:active,
.plus-btn:active {
  background: #E0E0E0;
  transform: scale(0.95);
}

.minus-btn.disabled {
  background: #F7F7F7;
  opacity: 0.5;
  pointer-events: none;
}

.quantity text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  min-width: 60rpx;
  text-align: center;
}

