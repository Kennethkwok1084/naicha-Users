page {
  --primary-color: #2f8d46;
  --text-color: #222222;
  --subtext-color: #666666;
  --border-color: #ededed;
  --bg-color: #fafaFA;
  --surface-color: #ffffff;
  height: 100%;
  background: var(--bg-color);
}

.menu-page {
  min-height: 100vh;
  background: var(--bg-color);
}

.menu-page__container {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.menu-page__skeleton {
  display: flex;
  padding: 64rpx 32rpx 120rpx;
}

.menu-page__skeleton-left {
  margin-right: 32rpx;
}

.menu-page__skeleton-left {
  width: 176rpx;
  margin-right: 32rpx;
}

.menu-page__skeleton-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-page__skeleton-right > * {
  margin-bottom: 32rpx;
}

.menu-page__skeleton-right > *:last-child {
  margin-bottom: 0;
}

.app-bar {
  background: var(--bg-color);
  padding: 0 32rpx 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.04);
  border-radius: 0 0 32rpx 32rpx;
}

.app-bar__inner {
  display: flex;
  align-items: center;
}

.app-bar__inner > * {
  margin-right: 24rpx;
}

.app-bar__inner > *:last-child {
  margin-right: 0;
}

.app-bar__left {
  display: flex;
  align-items: center;
}

.app-bar__left > * {
  margin-right: 12rpx;
}

.app-bar__left > *:last-child {
  margin-right: 0;
}

.app-bar__icon-btn {
  width: 72rpx !important;
  height: 72rpx !important;
  border-radius: 36rpx !important;
  background: rgba(0, 0, 0, 0.04);
}

.app-bar__center {
  flex: 1;
}

.app-bar__right {
  width: 72rpx;
  display: flex;
  justify-content: flex-end;
}

.app-bar__wechat-placeholder {
  width: 48rpx;
  height: 48rpx;
}

.store-bar {
  height: 96rpx;
  padding: 0 32rpx;
  background: var(--surface-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--border-color);
}

.store-bar__info {
  flex: 1;
  display: flex;
  align-items: center;
}

.store-bar__info > * {
  margin-right: 16rpx;
}

.store-bar__info > *:last-child {
  margin-right: 0;
}

.store-bar__info--hover {
  background: rgba(0, 0, 0, 0.04);
}

.store-bar__text {
  display: flex;
  flex-direction: column;
  line-height: 1.4;
}

.store-bar__name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.store-bar__address {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.store-bar__service {
  display: flex;
  justify-content: flex-end;
  min-width: 220rpx;
}

/* 配送模式切换器 */
.delivery-mode-switcher {
  display: flex;
  background: #f5f5f5;
  border-radius: 20rpx;
  padding: 4rpx;
}

.delivery-mode-option {
  padding: 8rpx 24rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 16rpx;
  transition: all 0.2s ease;
  min-width: 80rpx;
  text-align: center;
}

.delivery-mode-option--active {
  background: #fff;
  color: #0052d9;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.store-bar__service-empty {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.notice-section {
  margin: 0 32rpx;
  margin-top: 16rpx;
  background: var(--surface-color);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.notice-section__bar {
  padding: 0 16rpx;
}

.notice-section__detail {
  padding: 16rpx 24rpx 24rpx;
  border-top: 1rpx solid var(--border-color);
  font-size: 24rpx;
  color: var(--subtext-color);
}

.store-extra {
  padding: 16rpx 32rpx 0;
  color: var(--subtext-color);
  font-size: 24rpx;
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx 0 0 -16rpx;
}

.store-extra__item {
  margin: 8rpx 0 0 16rpx;
}

.store-extra__item {
  font-size: 24rpx;
}

.store-extra__item.is-highlight {
  color: var(--primary-color);
  font-weight: 600;
}

.menu-page__content {
  flex: 1;
  display: flex;
  overflow: hidden;
  margin-top: 24rpx;
}

.menu-page__sidebar {
  width: 176rpx;
  background: #f2f4f5;
  border-radius: 0 24rpx 24rpx 0;
  overflow: hidden;
}

.menu-page__sidebar t-side-bar {
  height: 100%;
}

.menu-page__products {
  flex: 1;
  background: var(--surface-color);
  border-radius: 24rpx 0 0 0;
  margin-left: 16rpx;
  height: calc(100vh - 360rpx);
}

.menu-page__products-list {
  padding: 24rpx 24rpx 260rpx;
  box-sizing: border-box;
}

.menu-page__product-item {
  margin-bottom: 24rpx;
}

.menu-page__product-item:last-child {
  margin-bottom: 0;
}

.menu-page__empty {
  padding-top: 160rpx;
}

.cart-bar {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  bottom: calc(32rpx + constant(safe-area-inset-bottom));
  bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: var(--surface-color);
  border-radius: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(47, 141, 70, 0.2);
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 999;
}

.cart-bar--empty {
  opacity: 0.9;
}

.cart-bar__left {
  display: flex;
  align-items: center;
}

.cart-bar__bag {
  margin-right: 16rpx;
}

.cart-bar__bag {
  width: 88rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: rgba(47, 141, 70, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.cart-bar__meta {
  display: flex;
  flex-direction: column;
  line-height: 1.2;
}

.cart-bar__total {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
}

.cart-bar__hint {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.cart-bar__btn {
  width: 240rpx;
}

/* Shop detail popup */
.shop-detail-popup {
  background: var(--surface-color);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
}

.shop-detail__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.shop-detail__title {
  font-size: 32rpx;
  font-weight: 600;
}

.shop-detail__close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shop-detail__section {
  margin-bottom: 32rpx;
}

.shop-detail__section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.shop-detail__section-text {
  font-size: 24rpx;
  color: var(--subtext-color);
}

.shop-detail__section-text.empty {
  color: #bbbbbb;
}

.shop-detail__paragraph {
  margin-bottom: 8rpx;
}

.shop-detail__paragraph.highlight {
  color: var(--primary-color);
}

.shop-detail__info-list {
  display: flex;
  flex-direction: column;
}

.shop-detail__info-item {
  margin-bottom: 12rpx;
}

.shop-detail__info-item:last-child {
  margin-bottom: 0;
}

.shop-detail__info-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.shop-detail__info-label {
  width: 140rpx;
  color: var(--subtext-color);
}

.shop-detail__info-value.open {
  color: var(--primary-color);
}

.shop-detail__actions {
  margin-top: 32rpx;
  display: flex;
  margin-left: -16rpx;
  margin-right: -16rpx;
}

.shop-detail__btn {
  margin: 0 8rpx;
}

.shop-detail__btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--border-color);
  font-size: 28rpx;
}

.shop-detail__btn--primary {
  background: var(--primary-color);
  color: #fff;
  border-color: transparent;
}

/* 规格选择弹窗 */
.spec-popup {
  background: #f5f5f5;
  border-radius: 32rpx 32rpx 0 0;
  height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部图片区域 */
.spec-popup__header {
  position: relative;
  width: 100%;
  height: 300rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.spec-popup__image {
  width: 100%;
  height: 100%;
  display: block;
}

.spec-popup__close {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

/* 商品信息区 */
.spec-popup__info {
  padding: 24rpx 32rpx;
  background: #fff;
  flex-shrink: 0;
}

.spec-popup__price-row {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.spec-popup__price {
  font-size: 40rpx;
  font-weight: 600;
  color: #e34d59;
}

.spec-popup__stock {
  font-size: 24rpx;
  color: #999;
}

.spec-popup__name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.spec-popup__desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  display: block;
}

/* 规格内容区域 */
.spec-popup__content {
  flex: 1;
  padding: 16rpx 32rpx 32rpx;
  background: #f5f5f5;
  overflow-y: scroll;
}

/* 规格组 */
.spec-group {
  margin-bottom: 32rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.spec-group__title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 规格选项网格布局 */
.spec-options-grid {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

/* 胶囊按钮样式 */
.spec-tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  margin: 0 16rpx 16rpx 0;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.2s ease;
  min-width: 140rpx;
  text-align: center;
}

.spec-tag__name {
  color: inherit;
}

.spec-tag__price {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #e34d59;
}

.spec-tag__soldout {
  margin-left: 8rpx;
  font-size: 22rpx;
  color: #999;
}

/* 选中状态 */
.spec-tag--selected {
  background: #e8f0ff;
  color: #0052d9;
  border: 2rpx solid #0052d9;
}

.spec-tag--selected .spec-tag__name {
  color: #0052d9;
  font-weight: 600;
}

/* 禁用状态 */
.spec-tag--disabled {
  opacity: 0.4;
  pointer-events: none;
}

/* 底部操作栏 */
.spec-popup__footer {
  border-top: 2rpx solid #eee;
  padding: 20rpx 32rpx;
  padding-bottom: 20rpx;
  padding-bottom: env(safe-area-inset-bottom, 20rpx);
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0;
}

.spec-popup__total {
  display: flex;
  flex-direction: column;
}

.spec-popup__total-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.spec-popup__total-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #e34d59;
}

.spec-popup__actions {
  display: flex;
  flex: 1;
  margin-left: 24rpx;
}

.spec-popup__actions t-button {
  flex: 1;
}

.spec-popup__actions t-button:first-child {
  margin-right: 12rpx;
}
