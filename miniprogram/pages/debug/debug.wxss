.debug-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 32rpx;
  /* 为 TabBar 预留空间：50px(tabBar) + 安全区 + 32rpx额外间距 */
  padding-bottom: calc(50px + env(safe-area-inset-bottom) + 32rpx);
  padding-bottom: calc(50px + constant(safe-area-inset-bottom) + 32rpx);
}

.debug-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.debug-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 24rpx;
}

.debug-actions {
  display: flex;
  gap: 16rpx;
}

.debug-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 32rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.debug-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
  min-width: 200rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
  word-break: break-all;
}

.info-value.highlight {
  color: #667eea;
  font-weight: 600;
  font-size: 32rpx;
}

.info-value.code {
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  color: #e74c3c;
  background: #fff5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.checklist {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.check-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.check-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.check-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.debug-tips {
  background: #fff9e6;
  border-radius: 16rpx;
  padding: 32rpx;
  border-left: 6rpx solid #ffc107;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #ff9800;
  margin-bottom: 16rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  white-space: pre-line;
}
